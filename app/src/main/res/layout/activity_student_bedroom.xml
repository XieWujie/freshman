<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".view.activity.StrategyActivity">
    <RelativeLayout
        android:id="@+id/necessary_app_bar"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="#ff5CACFC">
        <ImageView
            android:id="@+id/bedroom_back"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@drawable/freshman_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/strategy_name"
            android:layout_width="73dp"
            android:layout_height="18dp"
            android:textSize="15sp"
            android:text="学生寝室"
            android:gravity="center"
            android:textColor="#ffFEFEFF"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
   <android.support.v7.widget.RecyclerView
       android:id="@+id/bedroom_name_rc_view"
       android:background="#FFFFFF"
       android:layout_width="match_parent"
       android:layout_height="45dp"/>
    <TextView
        android:background="#54ACFF"
        android:layout_width="40dp"
        android:layout_height="3dp" />
    <android.support.v4.view.ViewPager
        android:id="@+id/bedroom_rc_view_pager"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>