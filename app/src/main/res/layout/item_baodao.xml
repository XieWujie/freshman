<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <LinearLayout
            android:id="@+id/BaoDao_activity_card"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            >
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="5"
                app:cardCornerRadius="5dp"
                >

                <ImageView
                    android:id="@+id/Baodao_image1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="5"
               android:layout_alignParentRight="true"

                >
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Baodao_image2"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/BaoDao_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="19dp"

            android:textColor="#ff000000"
            android:layout_below="@id/BaoDao_activity_card"/>
        <TextView
            android:id="@+id/BaoDao_activity_buzou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/BaoDao_activity_title"
            android:layout_alignBottom="@id/BaoDao_activity_title"/>
        <TextView
            android:id="@+id/BaoDao_activity_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#6e000000"
            android:layout_below="@id/BaoDao_activity_title"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/BaoDao_hes"
            android:layout_width="20dp"
            android:layout_height="12dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/freshman_hes_down"
            android:layout_marginTop="23dp"
            android:layout_below="@id/BaoDao_activity_content"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>