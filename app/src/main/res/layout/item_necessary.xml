<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    android:background="#ffffffff"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <CheckBox
        android:id="@+id/necessary_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
       android:theme="@style/CheckboxColor"
        />
    <TextView
        android:id="@+id/necessary_item"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="16dp"
        android:textSize="13sp"

        android:layout_toRightOf="@id/necessary_checkbox"
       />
    <ImageView
        android:id="@+id/necessary_detail_view"
        android:layout_width="14dp"
        android:layout_height="19dp"
        android:src="@drawable/freshman_down_up"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:layout_marginRight="11dp"/>
        <TextView
            android:id="@+id/necessary_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/necessary_item"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="49dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="19dp"
            android:textSize="12sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
