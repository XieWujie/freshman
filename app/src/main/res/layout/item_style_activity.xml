<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="5dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">
    <android.support.v7.widget.CardView
        android:id="@+id/style_activity_card"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        app:cardCornerRadius="5dp"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/style_activity_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/style_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:layout_marginTop="19dp"
        android:textColor="#ff000000"
        android:layout_below="@id/style_activity_card"/>
    <TextView
        android:id="@+id/style_activity_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#6e000000"
        android:layout_below="@id/style_activity_title"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>
</android.support.v7.widget.CardView>