<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffffff">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">
    <ImageView
        android:id="@+id/style_organization_image1"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/style_organization_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:textColor="#ff000000"
        android:layout_below="@id/style_organization_image1"/>
    <TextView
        android:id="@+id/style_organization_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#6e000000"
        android:layout_below="@id/style_organization_title"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/style_organization_heshang"
        android:layout_width="33dp"
        android:layout_height="20dp"
        android:src="@drawable/freshman_hes_down"
        android:layout_below="@id/style_organization_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
      />
</RelativeLayout>
    </android.support.v7.widget.CardView>>
</ScrollView>